---
import VideoItem from "../storyblok/videoItem.astro";
const { blok } = Astro.props;
const { title, intro, videoList } = blok;
---

<section class="max-w-7xl mx-auto px-6 py-10">
  <h1 class="text-3xl font-semibold mb-6">{title || "Vídeos"}</h1>
  {intro && <div class="prose max-w-3xl mb-8" innerHTML={intro} />}

  <!-- 1 col en móvil, 2 desde md; estirar items para igualar alturas -->
  <div class="grid grid-cols-1 gap-8 items-stretch">
    {Array.isArray(videoList) && videoList.map((v) => (
      <VideoItem blok={v} />
    ))}
  </div>
</section>

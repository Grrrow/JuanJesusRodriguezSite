---
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import type { StoryblokMenuItem } from '../types/StoryblokMenuItem'

const { blok } = Astro.props
const {title, logo, titleLink, menu} = blok
console.log("Header data:", logo)
---
    <header class="header">
        <div class="header__logo">  
            <a href={titleLink.url} class="header__logo-link"> 
              {logo.source}             
                <img src={logo.filename} alt={logo.alt} class="header__logo-image" />
            </a>
        </div>
        <nav class="header__nav">
            <ul class="header__menu">
                {menu.map((item: StoryblokMenuItem) => (
                    <StoryblokComponent blok={item} key={item._uid} class="header__menu-item" />
                ))}
            </ul>
        </nav>
    </header>
<style>
  main {
    position: relative;
  }
  .image-background {
    height: 80vh;
    position: absolute;
    z-index: -1;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
  }
  .image-background.light {
    display: block;
  }
  .image-background.dark {
    display: none;
  }
</style>